<div class="container txt-box mt-2">
  <div class="row">
    <div class="d-flex justify-content-between mb-2">
      <div class="d-flex align-items-center justify-content-between col-md-12 col-12 mx-auto">    <%= link_to :back, class:'link-offset-2 link-underline link-underline-opacity-0' do %>
      <i class="fa-solid fa-chevron-left mb-3 mt-4"></i> Back
    <% end %>        <span class="text-center flex-grow-1"><h1 class="mb-0">Goal</h1></span>
        <a href="" class="btn btn-primary"><i class="fas fa-link"></i></a>
      </div>
    </div>
    <div class="d-flex flex-column justify-content-center">
      <div class="card card-horizontal col-12 bg-dark border-black rounded-5 p-1 px-4 mb-2">
        <div class="row">
          <div class="d-flex flex-column justify-content-center align-items-center py-2 px-0">
            <div class="d-flex flex-column align-items-center mb-3">
              <h2 class="goal-title text mb-0 text-white"><%= @goal.title %></h2>
              <p class=" goal-prog-amaunt"><%= @goal.goal_progress %> / <%= @goal.amount %></p>
            </div>

            <%= render 'shared/goal_progress_line' %>

            <div class="d-flex flex-column align-items-center">
              <%= link_to '<i class="fas fa-plus"></i> Transaction'.html_safe, new_wallet_transaction_path(@wallet, transaction_type: 'expense', goal_id: @goal.id), class: 'btn btn-primary' %>
            </div>
          </div>
          <div class="d-flex justify-content-between align-items-center py-2 px-1">
            <div class="row">
              <div class="text-center">
                <p>Monthly payment:</p>
                <p><%= @goal.goal_balance / @goal.current_month_progress[:remaining_months]%></p>
              </div>
            </div>
            <div class="row">
              <div class="text-center">
                <p>Months:</p>
                <p><%= @goal.current_month_progress[:months_past]%> of <%= @goal.current_month_progress[:total_months] %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="transactions">
      <div class="headlines d-flex justify-content-between content-center align-items-center mb-1">
        <h2>Goal Transactions</h2>
      </div>
      <div class="transaction-cards">
        <% if @goal.transactions.any? %>
          <ul class="list-unstyled">
            <% @goal.transactions.each do |transaction| %>
             <%= link_to wallet_transaction_path(@wallet, transaction), class:"link-offset-2 link-underline link-underline-opacity-0" do %>
                <li class="d-flex justify-content-between border bg-dark align-items-center border-black rounded-5 p-3 px-4 mb-2">
                  <div class="d-flex gap-4 align-items-center">
                    <span class="text fs-1"><%= transaction.category.icon %></span>

                    <div class="name-category">
                      <p class="text mb-0 text-white" style="font-size:18px"><%= transaction.title %></p>
                      <p class="text-dark-emphasis mb-0 "><%= transaction.category.name %></p>
                    </div>
                  </div>
                    <p class="text fs-6 mb-0 text-success fw-lighter"><strong><%= transaction.amount %></strong></p>
                  </li>
              <% end %>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>

    <div class="transaction-links d-flex justify-content-center mt-4">
      <div class="d-flex justify-content-between" style="width: 200px;">
        <p><%= link_to ("<i class='fa fa-pencil'></i> Edit").html_safe, edit_goal_path(@goal, wallet_id: @wallet.id), class: "btn btn-warning rounded-0" %></p>
        <p><%= link_to ("<i class='fa fa-trash'></i> Delete").html_safe,
          wallet_goals_path(@wallet),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
          class: "btn btn-secondary rounded-0"%></p>
      </div>
    </div>

  </div>
</div>
