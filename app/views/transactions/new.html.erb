<div class="container">
  <%= simple_form_for [@wallet, @transaction] do |f| %>
    <%= f.input :title, input_html: { value: @transaction.title } %>
    <%= f.input :description%>
    <%= f.input :date%>
    <%= f.input :amount%>
    <%= f.input :category_id, collection: Category.all, label_method: :name, value_method: :id %>
    <%= f.hidden_field :transaction_type, value: params[:transaction_type] %>
    <%= f.hidden_field :goal_id, value: @goal&.id || @wallet.goals.where(title: "Main").first&.id %>
    <%= f.submit class: "btn btn-success mt-3 lh-lg w-100" %>
  <% end %>
  <%= link_to "Go Back", wallet_path(@wallet), class: "btn btn-secondary btn-lg mt-3 w-100" %>
</div>
