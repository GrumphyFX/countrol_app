<%= link_to '<i class="fa-solid fa-chevron-left"></i> Back'.html_safe, transactions_path %>

<div class="container">
  <h2><%= @transaction.title %></h2>
  <p><%= @transaction.transaction_type.capitalize %></p>
  <p><%= @transaction.description %></p>
  <p><%= @transaction.date %></p>
  <p><%= @transaction.amount %></p>
  <p> <%= @transaction.created_at %></p>
</div>

<div class="transaction-links d-flex justify-content-center mt-4">
  <%= link_to "Edit", edit_transaction_path, class: "btn btn-warning rounded-0" %>
  <%= link_to "Delete",
    transaction_path(@transaction),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
    class: "btn btn-secondary rounded-0"
  %>
</div>
