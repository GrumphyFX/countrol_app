<div class="container txt-box">
  <div class="d-flex justify-content-between">
    <%= link_to '<i class="fa-solid fa-chevron-left"></i> Back'.html_safe, wallet_transactions_path(@wallet), class:'link-offset-2 link-underline link-underline-opacity-0' %>
    <p>Transaction Details</p>
    <p><%= link_to ("Edit <i class='fa fa-pencil'></i>").html_safe, edit_wallet_transaction_path(@wallet), class:'link-offset-2 link-underline link-underline-opacity-0' %></p>
  </div>

  <div class="main-details">
        <div class="transaction-icon d-flex justify-content-center">

          <p class='mb-0' style='font-size:100px'>
          <%= @transaction.category.icon %></p>
        </div>

        <div class="transaction-title text-center justify-content-center">
          <h1><%= @transaction.title %></h1>

          <% if @transaction.transaction_type == "income" %>
          <p class="fw-bold text-success amount-font " style='font-size:40px'><strong>+<%= @transaction.formatted_amount %></strong></p>
          <% else %>
          <p class="fw-bold text-danger amount-font" style='font-size:40px'><strong>-<%= @transaction.formatted_amount %></strong></p>
          <% end %>

      <div class="transactions-head justify-content-center mb-3">
        <p class='text-center text-secondary'><%= @transaction.date.strftime("%A, %B %d, %Y")
        %></p>
        <p class="text-center text-secondary"><%= @transaction.created_at.strftime("%I:%M:%S %p") %></p>
      </div>

        </div>

      </div>

      <% if @transaction.description.present? %>
        <div class="txt d-flex justify-content-center">
          <p class='p-3 bg-dark text-light rounded-5'><%= @transaction.description %></p>
        </div>
      <% end %>

      <%= link_to wallet_categories_path(@wallet), class:'link-offset-2 link-underline link-underline-opacity-0' do %>
        <div class="category-card p-3 mb-3 bg-dark  text-light rounded-5 category-field d-flex justify-content-between">
          <p class='mb-0'>
          Category
          </p>
          <div class="category-info">
            <h6 class='mb-0 fw-normal text-secondary'><%= @transaction.category.name %> <i class="fa-solid fa-chevron-right"></i> </h6>
          </div>
        </div>
      <% end %>

      <%= link_to wallet_path(@wallet), class:'link-offset-2 link-underline link-underline-opacity-0' do %>
        <div class="wallet-card p-3 mb-3 bg-dark  text-light rounded-5 category-field d-flex justify-content-between">
          <p class='mb-0'>
          Wallet
          </p>
          <div class="category-info">
            <h6 class='mb-0 fw-normal text-secondary'><%= @transaction.wallet.name %> <i class="fa-solid fa-chevron-right"></i> </h6>
          </div>
        </div>
      <% end %>

    <div class="transaction-links d-flex justify-content-center mt-4">
      <div class="d-flex justify-content-center" style="width: 200px;">
        <p><%= link_to wallet_transaction_path(@wallet),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
          class: "btn btn-dark rounded-5 text-danger" do %>
            <i class='fa fa-trash'></i><span>  </span> Delete
          <% end %>
        </p>
      </div>
    </div>
</div>
