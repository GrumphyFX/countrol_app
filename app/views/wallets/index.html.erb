<div class="container">
<h1>Wallets</h1>

<%= link_to "Add Wallet", new_wallet_path %>

<ul>
  <% @wallets.each do |wallet| %>
    <li> <%= link_to wallet.name, wallet %> </li>
    <%= link_to 'Edit', edit_wallet_path(wallet) %>
    <%= link_to "Delete",
          wallet_path(wallet),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
  <% end %>
</ul>
</div>
