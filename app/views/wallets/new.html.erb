<h1>New Wallet</h1>

<%= simple_form_for @wallet, url: wallets_path do |f| %>
  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create Wallet" %>
  </div>
<% end %>

<%= link_to 'Back', wallets_path %>
