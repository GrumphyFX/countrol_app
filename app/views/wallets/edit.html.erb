<h1>Edit <%= @wallet.name %></h1>

<%= simple_form_for @wallet, url: wallet_path(@wallet), method: :patch do |f| %>
  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update Wallet" %>
  </div>
<% end %>

<%= link_to 'Back', wallets_path %>
